<%= link_to '顧客情報一覧',new_blog_path%>

<%= month_calendar events: @customers do |date,customers| %>
  <%= date.day %>
   <% customers.each do |customer| %>
    <% if customer.user_id == current_user.id %>
    <div>
      <%= link_to customer.first_name ,customer_path(customer.id)%>
    </div>
    <% end %>
   <% end %>
<% end %>





